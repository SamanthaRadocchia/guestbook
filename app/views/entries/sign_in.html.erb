<h1>Hello <%= @name %></h1>

<%= form_tag :action => 'sign_in' do %>
 <p>Enter your name:
 <%= text_field_tag 'visitor_name', @name %></p>

 <%= submit_tag 'Sign in' %> 

<% end %>

<%# to iterate over visitors in the @entries array and return each previous visitor or "entry" in array %>
<p>Previous visitors:</p>
<ul>
<% @entries.each do |entry| %>  
	<li><%=h entry.name %></li> <% end %>
</ul>